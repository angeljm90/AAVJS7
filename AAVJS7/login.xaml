<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AAVJS7.login">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Bienevenido al sistema" />
            <Entry x:Name="txtUsuario" Placeholder="Usuario"></Entry>
            <Entry x:Name="txtContrasena" Placeholder="Contraseña" IsPassword="True"></Entry>
            <Button x:Name="btnIniciar" Text="Iniciar" Clicked="btnIniciar_Clicked"></Button>
            <Button x:Name="btnRegistrar" Text="Iniciar" Clicked="btnRegistrar_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>