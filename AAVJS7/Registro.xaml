<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AAVJS7.Registro">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label Text="Bienevenido al sistema" />
                <Entry x:Name="txtNopmbre" Placeholder="Nombre"></Entry>
                <Entry x:Name="txtUsuario" Placeholder="Usuario" Keyboard="Email"></Entry>
                <Entry x:Name="txtContrasena" Placeholder="Contraseña" IsPassword="True"></Entry>
                <Button x:Name="btnRegistrar" Text="Registrar" Clicked="btnRegistrar_Clicked"></Button>
            </StackLayout>
        </ScrollView>
       
    </ContentPage.Content>
</ContentPage>